{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ManufacturerSupportRecord",
  "type": "object",
  "required": [
    "id",
    "name",
    "categories",
    "support"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "website": {
      "type": "string"
    },
    "support": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "category",
          "department",
          "phone",
          "country",
          "last_verified"
        ],
        "properties": {
          "category": {
            "type": "string"
          },
          "department": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "country": {
            "type": "string",
            "minLength": 2,
            "maxLength": 2
          },
          "regions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "hours": {
            "type": "object",
            "properties": {
              "timezone": {
                "type": "string"
              },
              "mon_fri": {
                "type": "string"
              },
              "sat": {
                "type": "string"
              },
              "sun": {
                "type": "string"
              }
            },
            "additionalProperties": true
          },
          "specialty_tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "last_verified": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}